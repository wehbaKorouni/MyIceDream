@model IEnumerable<MyIceDream.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>@ViewData["Title"]</h1>
<a href="@Url.Action("Create")" class="btn btn-primary">Create New Order</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Product</th>
            <th>Order Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.ProductId</td>
                <td>@order.TotalPrice</td>
                <td>
                    <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Order", new { id = order.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Order", new { id = order.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
