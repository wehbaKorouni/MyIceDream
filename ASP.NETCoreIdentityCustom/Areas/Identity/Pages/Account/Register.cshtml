@page

@model RegisterModel
@{
    ViewData["Title"] = "Registrere";
}

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<h1>@ViewData["Title"]</h1>



   <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2>Oprette en ny konto.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3 p-1"> 
                    <label asp-for="Input.FirstName" class="p-0"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="Input.LastName" class="p-0"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="Input.Email" class="p-0"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="Input.Password" class="p-0"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="Input.ConfirmPassword" class="p-0"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class=" row">
                    <div class="col-8 col-md-3">
                        <button id="registerSubmit" type="submit" class="btn btn-info w-75">Registrere</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

        @section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
